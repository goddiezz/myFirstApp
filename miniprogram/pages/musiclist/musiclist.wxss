/* 顶部导航栏，随着滚动出现 */
.header {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 999;
  padding-bottom: 10rpx;
}
/* 默认标题菜单 */
.title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 100rpx;
  font-size: 18px;
  color: #fff;
  z-index: 1003;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
  text-overflow: ellipsis;
}
/* 返回箭头 */
.icon-zuo {
  position: absolute;
  left: 25rpx;
  top: 100rpx;
  font-size: 40rpx;
  color: #fff;
  z-index: 1003;
}
/* 以下三个元素分三层，实现歌单信息的毛玻璃效果 */
/* 1-图片背景模糊 */
.blur-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(40rpx);
  opacity: 0.4;
}
/* 2-遮罩层 */
.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-attachment: #333;
}
/* 3-最上层的内容，一定要相对定位不脱离文档流 */
.info-container {
  width: 100%;
  height: 380rpx;
  position: relative;
  background-color: #ccc;
}
/* 歌单详情信息容器，可以用父相子绝轻+flex来巧布局 */
.detail-info {
  position: relative;
  width: 100%;
  height: 380rpx;
  display: flex;
  justify-self: center;
  box-sizing: border-box;
  padding-top: 60rpx;
}
/* 左边歌单图片 */
.detail-info .left {
  flex:1 1 30%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
/* 歌单封面图 */
.detail-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
/* 右边歌单信息 */
.detail-info .right {
  flex: 1 1 70%;
  box-sizing: border-box;
  padding-left: 30rpx;
}
/* 歌单名 */
.detail-name {
  color: #ffffff;
  font-size: 32rpx;
  line-height: 1.5;
  font-weight: 300;
  margin-bottom: 20rpx;
}
/* 歌单创建者信息：头像、昵称，flex布局横向 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}
.user-info image {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.user-info text{
  font-size: 26rpx;
  color: #ccc;
}
/* 歌单描述 */
.deacription {
  font-size: 13rpx;
  font-weight: 300;
  color: #f6f6f6;
}
/* 分享评论等操作区，父相子绝定位，自身flex布局，主轴均分，测轴居中 */
.control {
  position: absolute;
  bottom: -20rpx;
  width: 70%;
  height: 90rpx;
  border-radius: 50rpx;
  background-color: #fff;
  display: flex;
  padding-left: 10rpx;
  padding-right: 10rpx;
  justify-content: space-around;
  align-items: center;
  justify-content: center;
  left: 15%;
}
/* 分三组布局 */
.control view {
  padding-left: 30rpx;
  padding-right: 30rpx;
  flex: 1 1 33%;
  display: flex;
  justify-content: space-around;
  color: #333;
  font-size: 28rpx;
}
/* 伪类，对第一个view使用特殊样式 */
.control view:first-child {
  color: #949494;
}
.control view:not(.last) {
  border-right: 1px solid #ccc;
}

.control view text .iconfont {
  margin-right: 10rpx;
}
.content {
  width: 100%;
  margin-top: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.ellipsis {
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background-color: #f8f8f8;
}
