}

.search-icon {
  margin: 6rpx 10rpx 10rpx 10rpx;
  position: absolute;
  margin-left: 54%;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}

.search-border {
  width: 80%;
  border: solid 1rpx #2a2a2a;
  border-radius: 30px;
  margin: 4rpx auto 4rpx auto;
