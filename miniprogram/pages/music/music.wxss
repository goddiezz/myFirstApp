  height: 340rpx;
}

.image {
  width: 98%;
  height: 100%;
  border-radius: 20rpx;
  margin: 0 1% 1% 1%;
}

.title {
  margin-top: 10rpx;
  margin-left: 10rpx;
}

.playlist-container {
