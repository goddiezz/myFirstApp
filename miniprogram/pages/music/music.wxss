/* pages/music/music.wxss */
.swiper{
  height: 340rpx;
}
.image{
  width: 98%;
  height: 100%;
  border-radius: 20rpx;
  margin: 0 1% 1% 1%;
}
.title{
  margin-top: 10rpx;
  margin-left: 10rpx;
}
.playlist-container {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.search-Bottom{
  width: 80%;
  display: flex;
  flex-direction: row;
  
}
.search-text {
  padding-left: 42.5%;
  width: 15%;
  line-height: 150%;
  text-align: center;
}
.search-icon {
  margin: 6rpx 10rpx 10rpx 10rpx;
  position: absolute;
  margin-left:54%;
  z-index: 2;
  width: 15px;
  height: 15px;
  text-align: center;
}
.search-border {
  width: 98%;
  border: solid 1rpx #2a2a2a;
  border-radius: 30px;  
  margin: 4rpx auto 4rpx auto;
  background: rgb(233, 233, 233);
}