
.container {
  display: flex;
  flex-wrap: wrap;
  background: #FFB6C1;
  height: 320rpx;
  width: 100%;
}
.iconfont {
  color: #fff;
}
.top-view {
  /* background-color: #e9e9e9; */
  border-top: 1rpx #202020 solid;
  height: 240rpx;
  width: 100%;
  position: relative;
}
.head-box {
  position: absolute;
  border-radius: 50%;  
  background-color: #fff;
  height: 135rpx;
  width: 135rpx;
  top: 15%;
  left: 5%;
  justify-content: center; 
  display: flex; 
  align-items: center;
}
.head {
  height: 50%;
  width: 50%;
}
.name {
  position: absolute;
  font-size: 40rpx;
  left: 25%;
  top: 19%;
  color: #fff;
}
.icon-nanxing {
  position: absolute;
  font-size: 30rpx;
  left: 95rpx;
  top: 11%;
  padding-left: 15rpx;
  border-left: 3rpx solid #b1b1b1;
  color: #d8d6d6;
}
.signature {
  font-size: 30rpx;
  color: #d8d6d6;
}
.change-mask {
  opacity: 0.3;
  background-color: #fff;
  position: absolute;
  height: 66rpx;
  width: 140rpx;
  left: 75%;
  top: 30%;
  border-radius: 40rpx 40rpx;
}
.change-button {
  position: absolute;
  height: 66rpx;
  width: 135rpx;
  left: 75%;
  top: 30%;
  border-radius: 40rpx 40rpx;
}
.change {
  font-size: 30rpx;
  color: #fff;
  margin-left: 10rpx;  
}
.pencil {
  width: 30rpx;
  height: 30rpx;
  margin-left: 20rpx;
  margin-top: 18rpx;
}
.middle-view {
  background-color: #fff;
  position: relative;
  width: 100%;
  height: 180rpx;
  margin: 0 4% 0 4%;
  border-radius: 15rpx;
}
.follow-question {
  width: 33.3%;
  position: absolute;
  height: 100%;
}
.follow-person {
  width: 33.3%;
  left: 33.3%;
  position: absolute;
  height: 100%;

}
.follower {
  width: 33.3%;
  left: 66.7%;
  position: absolute;
  height: 100%;
}
.border-line {
  height: 66%;
  width: 100%;
  border: solid 3rpx #b1b1b1;
  border-top:none;
  border-bottom:none;
  position: absolute;
  top: 17%;
}
.number {
  font-size: 55rpx;
  justify-content: center;
  display: flex;
  margin-top: 25rpx;
}
.middle-text {
  justify-content: center;
  display: flex;
  color: #707070;
}
.bottom-view {
  background-color: #fff;
  top: 5%;
  position: relative;
  width: 100%;
  margin: 4% 4% 0 4%;
  border-radius: 15rpx;
  height: auto;
}
.strip {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.text-bottom {
  font-size: 35rpx;
  margin-left: 30rpx;
}
.icon-you {
  text-align: right;
  position: absolute;
  left: 92%;
  color: #adadad;
}
.text-bind {
  position: absolute;
  left: 78%;
  color: #adadad;
}