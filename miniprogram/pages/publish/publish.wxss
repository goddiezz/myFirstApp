}

.container .image-list .image-wrap {
  width: 221rpx;
  height: 220rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  position: relative;
  overflow: hidden;
  text-align: center;
  /* 显示的图片 */
  /* 删除的图标 */
}

.container .image-list .image-wrap .image {
  width: 100%;
  height: 100%;
}

.container .image-list .image-wrap .icon-shanchu1 {
  position: absolute;
  top: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background: #000;
  opacity: 0.4;
  color: #ffffff;
  text-align: center;
  line-height: 40rpx;
  font-size: 38rpx;
  font-weight: bolder;
}

.selectphoto {
  border: 2rpx dashed #ccc;
  position: relative;
  background-color: #f8f8f8;
}

.selectphoto .icon-jiahao {
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: #ccc;
  font-size: 90rpx;
}

.footer {
  position: fixed;
  width: 100%;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 40rpx;
  background-color: #f1f1f1;
}

.footer .words-num {
  -webkit-box-flex: 1;
      -ms-flex: 1;
          flex: 1;
  text-align: right;
  color: #474747;
